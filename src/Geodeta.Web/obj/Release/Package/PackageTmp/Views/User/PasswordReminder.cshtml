@model Geodeta.Data.User

@{
    ViewBag.Title = "Generowanie nowego hasła";
}

<h2>Generowanie nowego hasła</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

   

        <label>
            Podaj adres e-mail
        </label>
        <div class="editor-field">
               
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
            </div>

        <p >
            
            <button type="submit" value="Register" style="margin-right:5px;margin-top:5%;margin-bottom:5%; float:right" class="btn btn-default btn-circle btn-xl" ><i class="glyphicon glyphicon-ok"></i></button>
            <button type="button" class="btn btn-default btn-circle btn-xl " style="margin-right:5px;margin-top:5%;margin-bottom:5%; float:left" onclick="location.href='@Url.Action("Index", "Home")';return false;"><i class="glyphicon glyphicon-arrow-left"></i></button>
  
        </p>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
